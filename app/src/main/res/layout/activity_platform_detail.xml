<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.platform.DetailPlatformActivity">

    <ImageView
        android:id="@+id/platformePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_playstation" />

    <TextView
        android:id="@+id/platformeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Name : NAME_HERE"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/platformeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Description : DESCRIPTION_HERE"
        android:textColor="@color/darkBlue"
        android:textSize="20sp" />

        <Button
            android:id="@+id/platformButton"
            android:layout_gravity="center"
            android:text="@string/platform_button"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:background="@drawable/corner"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_width="186dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>